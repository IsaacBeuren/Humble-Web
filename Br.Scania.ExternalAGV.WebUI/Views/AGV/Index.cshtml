<script src="https://cdn.polyfill.io/v2/polyfill.min.js?features=requestAnimationFrame,Element.prototype.classList,URL"></script>
<link rel="stylesheet" href="https://openlayers.org/en/v5.3.0/css/ol.css" type="text/css">
<script src="https://cdn.polyfill.io/v2/polyfill.min.js?features=requestAnimationFrame,Element.prototype.classList,URL"></script>
<script src="https://code.jquery.com/jquery-2.2.3.min.js"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://openlayers.org/en/v5.3.0/css/ol.css" type="text/css">

<div class="row">
    <div style="float:left;margin-left: 10px">
        <h4 float="left">Double click to transfer the route:</h4>
    </div>
    <br />
    <br />
    <br />
    <div class="col-lg-2" style="border:solid;margin-left: 10px">
        <table class="table table-hover" id="bodyTabela">
            <thead>
                <tr>
                    <th><h4>Routes</h4></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
    <div class="col-lg-2" style="border:solid;margin-left: 10px">
        <table class="table table-hover" id="bodyTabelaRoute">
            <thead>
                <tr>
                    <th><h4 id="label-route">Select a Route</h4></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
        <div id="button-update"></div>
    </div>
    <div class="col" id="mapAGV"></div>
</div>

<div class="modal modalInicialPoint" tabindex="-1" role="dialog" id="modalInicialPoint">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" style="text-align: center;"><font color="black">Select the initial point</font></h4>
            </div>
            <input type="hidden" id="id">
            <div class="modal-body">
                <div class="input-group mb-3">
                    <div class="col-lg-4">
                        <label id="modalContent" style="margin-top: 22px">Initial Point:</label>
                    </div>
                    <div class="col-lg-7">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" id="cancel-event" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" id="form-event">Send</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/agv.js"></script>
