@{
    ViewData["Title"] = "Rotas";
}


<div class="row">
    <div class="col-lg-4" style="border:solid; height: 1000px; overflow-y: scroll;" >
        <table class="table table-hover" id="bodyTabela">
            <thead>
                <tr>
                    <th><h4><font color="white">Route</font></h4></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
        <button class="btn btn-success btn-success-save" id="insert-event">Insert</button>
        <br />
        <br />
    </div>
    <div class="col-lg-4" style="border:solid; height: 1000px; overflow-y: scroll;">
        <table class="table table-hover" id="bodyTabelaConfig">
            <thead>
                <tr>
                    <th><h4><font color="white">Points</font></h4></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
    <div class="col-lg-4" style="border:solid; height: 1000px; overflow-y: scroll;">
        <table class="table table-hover" id="bodyTabelaRoute">
            <thead>
                <tr>
                    <th><h4 id="routeName"><font color="white">Select a Route</font></h4></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
        <div id="button-update"></div>
        <br />
    </div>
</div>

<div class="modal modalLatLng" tabindex="-1" role="dialog" id="modalInsert">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="modalTitle" style="text-align: center; "></h4>
            </div>
            <input type="hidden" id="id">
            <div class="modal-body">
                <div class="input-group mb-3">
                    <div class="col-lg-3">
                        <label id="modalContent" style="margin-top: 18px"></label>
                        <label id="modalContent2" style="margin-top: 18px"></label>
                    </div>
                    <div class="col-lg-7">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" id="cancel-event" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" id="form-event"></button>
                <button type="button" class="btn btn-danger" id="remove-event">Remove</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

