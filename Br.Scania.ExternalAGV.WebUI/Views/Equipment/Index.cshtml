@{
    ViewData["Title"] = "Equipamento";
}


<div class="row">
    <div class="col-3">
        <table class="table table-hover" id="bodyTabela">
            <thead>
                <tr>
                    <th><h4><font color="white">ID</font></h4></th>
                    <th><h4><font color="white">Equipment</font></h4></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
        <button type="button" class="btn btn-success" id="insert-event">Insert</button>
    </div>
</div>



<div class="modal modalLatLng" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="modalTitle" style='margin-left: 160px'>New Vehicle</h4>
            </div>
            <input type="hidden" id="id">
            <div class="modal-body">
                <div class="input-group mb-3">
                    <div class="col-lg-3">
                        <label style="margin-top: 18px">Label:</label>
                    </div>
                    <div class="col-lg-7">
                        <input id="type" type="text" class="form-control" placeholder="" aria-label="" aria-describedby="basic-addon1">
                    </div>
                </div>
                <div class="input-group mb-3">
                    <div class="col-lg-3">
                        <label style="margin-top: 18px">Número:</label>
                    </div>
                    <div class="col-lg-7">
                        <input id="equipNumber" type="text" class="form-control" placeholder="" aria-label="" aria-describedby="basic-addon1">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" id="cancel-event" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" id="form-event"></button>
                <button type="button" class="btn btn-danger" id="remove-event">Remove</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/equipment.js"></script>

